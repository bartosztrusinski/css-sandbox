---
import HomePageButton from "../components/HomePageButton.astro";

type Props = {
  title?: string;
};

const { title } = Astro.props;
const projectName = "CSS Sandbox";
const isHomePage = Astro.url.pathname === "/";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | ${projectName}` : projectName}</title>
  </head>
  <body>
    <slot />
    {!isHomePage && <HomePageButton />}
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;900&display=swap");

  :root {
    --color-scheme: dark;

    --color-primary-hsl: 330, 86%, 49%;
    --color-primary: hsl(var(--color-primary-hsl));
    --color-dark-hsl: 222, 42%, 6%;
    --color-dark: hsl(var(--color-dark-hsl));
    --color-light-hs: 222, 42%;
    --color-light: hsl(var(--color-light-hs), 90%);

    --font-family: Nunito, sans-serif;

    --fs-300: clamp(0.94rem, calc(0.92rem + 0.08vw), 0.98rem);
    --fs-400: clamp(1.13rem, calc(1.06rem + 0.33vw), 1.31rem);
    --fs-500: clamp(1.35rem, calc(1.21rem + 0.69vw), 1.75rem);
    --fs-600: clamp(1.62rem, calc(1.37rem + 1.24vw), 2.33rem);
    --fs-700: clamp(1.94rem, calc(1.54rem + 2.03vw), 3.11rem);
    --fs-800: clamp(2.33rem, calc(1.7rem + 3.15vw), 4.14rem);
    --fs-900: clamp(2.8rem, calc(1.85rem + 4.74vw), 5.52rem);
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    color-scheme: var(--color-scheme);
    height: 100%;
  }

  body {
    background-color: var(--color-dark);
    color: var(--color-light);
    font-family: var(--font-family);
    font-size: var(--fs-400);
    line-height: 1.6;
    height: 100%;
  }

  img {
    max-width: 100%;
    display: block;
  }
</style>
